{
	"name": "node-lcms",
	"version": "1.0.0",
	"main": "dist/index.js",
	"repository": "git@github.com:danburzo/node-lcms.git",
	"author": "Dan Burzo <danburzo@gmail.com>",
	"license": "MIT",
	"files": [
		"dist"
	],
	"devDependencies": {
		"esm": "^3.2.25",
		"husky": "^2.4.1",
		"prettier": "1.18.2",
		"pretty-quick": "^1.11.1",
		"rollup": "^1.15.6",
		"rollup-plugin-buble": "^0.19.6",
		"tap-spec": "^5.0.0",
		"tape": "^4.10.2"
	},
	"scripts": {
		"build": "rollup -c",
		"test": "tape -r esm test/*.test.js | tap-spec"
	},
	"husky": {
		"hooks": {
			"pre-commit": "pretty-quick --staged"
		}
	},
	"prettier": {
		"bracketSpacing": true,
		"semi": true,
		"singleQuote": true,
		"trailingComma": "none",
		"useTabs": true,
		"tabWidth": 4,
		"jsxBracketSameLine": false,
		"arrowParens": "avoid",
		"printWidth": 80
	}
}
